<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/widget54"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<RelativeLayout 
		xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:id="@+id/rLogin"
        android:padding="5px"
        android:background="@drawable/background_1"
    	>

	<TextView  
		android:id="@+id/wel"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
    	android:gravity="center_vertical|center_horizontal"
    	android:textColor="#000000"
    	android:textSize="10px"
   	 	android:text="Welcome To PanHealth!"
    	/>
    	
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_below="@id/wel"
    android:id="@+id/l0"
    android:paddingTop="10px"
    android:gravity="right"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    	<Button 
			android:id="@+id/back" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:background="@drawable/back"
			android:gravity="center_vertical|center_horizontal"
			/> 
		
	</LinearLayout>
    	
    	<TextView  
		android:id="@+id/lo"
		android:layout_below="@id/l0"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:textSize="20px"
    	android:typeface="serif"
    	
    	android:gravity="center_vertical|center_horizontal"
    	android:textColor="#000000"
    	android:text="FORGOT PASSORD"
    	/>
   
   	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/l1"
    android:paddingTop="20px"
    android:layout_below="@id/lo"
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
   
   		<TextView
 					
					android:id="@+id/t1" 
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:textColor="#000000"
					android:textStyle="bold"
					android:text="     First Name: " 
					/>
		<EditText 
					
					
					android:id="@+id/fname" 
					android:background="#E6E6E6"
					android:typeface="serif"
					android:layout_width="150px" 
					android:layout_height="wrap_content"
					/>			
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/l2"
    android:paddingTop="10px"
    android:layout_below="@id/l1"
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
    <TextView 
					android:id="@+id/t2" 
					android:layout_below="@id/t1"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="#000000" 
					android:textStyle="bold"
					android:layout_gravity="center"
					android:text="  Last Name: "
					/>
				<EditText 
					android:id="@+id/lname" 
					android:layout_toRightOf="@id/t2" 
					android:layout_width="150px" 
					android:background="#E6E6E6"
					android:typeface="serif"
					android:layout_height="wrap_content" 
									
					/>
    </LinearLayout>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/l3"
    android:paddingTop="10px"
    android:layout_below="@id/l2"
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
    <TextView 
					android:id="@+id/t2" 
					android:layout_below="@id/t1"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="#000000" 
					android:textStyle="bold"
					android:layout_gravity="center"
					android:text="      Email-ID: "
					/>
				<EditText 
					android:id="@+id/email" 
					android:layout_toRightOf="@id/t2" 
					android:layout_width="150px" 
					android:background="#E6E6E6"
					android:typeface="serif"
					android:layout_height="wrap_content" 
									
					/>
    </LinearLayout>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/l4"
    android:paddingTop="10px"
    android:layout_below="@id/l3"
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
    <TextView 
					android:id="@+id/t2" 
					
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="#000000" 
					android:textStyle="bold"
					android:layout_gravity="center"
					android:text="PhoneNumber: "
					/>
				<EditText 
					android:id="@+id/phno" 
					android:phoneNumber="true"
					android:layout_width="150px" 
					android:background="#E6E6E6"
					android:typeface="serif"
					android:layout_height="wrap_content" 
									
					/>
    </LinearLayout>
    
    
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/l5"
    android:paddingTop="10px"
    android:layout_below="@id/l4"
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
    <Button 
				android:id="@+id/submit" 
				android:layout_below="@id/t2"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:background="@drawable/submit"
				/> 
			<Button 
				android:id="@+id/reset" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:background="@drawable/reset"
				/> 
    </LinearLayout>
    
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/l9"
    android:paddingTop="2px"
    android:layout_below="@id/l5"
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<TextView
		android:id="@+id/text3" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:layout_gravity="center"
		android:textColor="#000000"
		android:textSize="5pt"
		android:text="*Please enter the EmailID/Phone no that you entered at the time of registration." 
		/>
		</LinearLayout>
    
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/l10"
    android:paddingTop="10px"
    android:layout_below="@id/l9"
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<TextView
		android:id="@+id/text1" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:textStyle="bold"
		android:layout_gravity="center"
		android:textColor="#FF0000"
		android:text="" 
		/>
		</LinearLayout>
   
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/l10"
    android:paddingTop="10px"
    android:layout_below="@id/l9"
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<TextView
		android:id="@+id/text2" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:textStyle="bold"
		android:layout_gravity="center"
		android:textColor="#6666FF"
		android:text="" 
		/>
		</LinearLayout>
</RelativeLayout>
</ScrollView>